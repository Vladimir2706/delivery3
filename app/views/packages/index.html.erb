<!DOCTYPE html>
<head>
<title>!DOCTYPE</title>
<meta charset="utf-8">
</head>


<body>
<p id="notice"><%= notice %></p>

<h1>Packages</h1>

<table>
  <thead>
    <tr>
      <th>Tracking number</th>
      <th>Delivery status</th>
      <th>Description</th>
      <th>Delivery adress</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @packages.each do |package| %>
      <tr>
        <td><%= package.tracking_number %></td>
        <td><%= package.delivery_status %></td>
        <td><%= package.description %></td>
        <td><%= package.delivery_adress %></td>
        <td><%= link_to 'Show', package %></td>
        <td><%= link_to 'Edit', edit_package_path(package) %></td>
        <td><%= link_to 'Destroy', package, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Package', new_package_path %>
</br>
<%= link_to "Home page", controller: "pages", action: "home" %>

</body>